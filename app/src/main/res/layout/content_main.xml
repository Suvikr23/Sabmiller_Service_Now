<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C0C0C0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.suvendu.sabmillerservicenow.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="instance"
        android:layout_centerInParent="true"
        android:textColorHint="#ffffff"
        android:id="@+id/instance"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="password"
        android:layout_above="@id/instance"
        android:textColorHint="#ffffff"
        android:id="@+id/password"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="username"
        android:layout_above="@id/password"
        android:textColorHint="#ffffff"
        android:id="@+id/username"
        android:inputType="text"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@id/instance"
        android:gravity="top|center"
        android:id="@+id/btn"
        android:text="Login"
        android:fontFamily="sans-serif-condensedsans-serif"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:alpha="15"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn"
        android:paddingTop="20dp"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/snow"
        android:layout_weight="2"
        android:background="#ffffff"
        android:id="@+id/iv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/txt"
        android:background="#ffffff"
        android:paddingTop="10dp"
        android:layout_weight="8"/>

</LinearLayout>


</RelativeLayout>
